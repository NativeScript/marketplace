{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "jsx": "preserve",
      "lib": ["esnext", "dom", "dom.iterable"]
    },
    "include": [
      "./.vitepress/**/*.vue",
      "./.vitepress/**/*.ts",
      "./src",
    ]
  }